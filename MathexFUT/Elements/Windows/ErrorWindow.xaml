<Window x:Class="MathexFUT.Elements.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathexFUT.Elements.Windows"
        mc:Ignorable="d"
        Style="{StaticResource w}" WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="700"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="errorTxt" Grid.Row="0" Style="{StaticResource errorTB}"/>
		<Button Content="OK" Click="CloseClick" Grid.Row="1" Style="{StaticResource btn}"/>
	</Grid>
</Window>
