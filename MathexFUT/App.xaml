<Application x:Class="MathexFUT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<Style x:Key="w" TargetType="Window">
			<Setter Property="Background" Value="#6495ed"/>
			<Setter Property="Height" Value="1000"/>
			<Setter Property="Width" Value="1600"/>
			<Setter Property="WindowStyle" Value="SingleBorderWindow"/>			
		</Style>
		
		<Style x:Key="btn" TargetType="Button">
			<Setter Property="Background" Value="#2b70ed"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="Height" Value="40"/>
			<Setter Property="Width" Value="120"/>			
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="BorderBrush" Value="#2b70ed"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border BorderThickness="2" CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}">
							<TextBlock Text="{TemplateBinding Content}"
									   FontFamily="Consolas"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background" Value="#2b70ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#2b70ed"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		
		<Style x:Key="errorTB" TargetType="TextBlock">
			<Setter Property="Background" Value="#000000ff"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="Margin" Value="10"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontFamily" Value="Consolas"/>
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>

		<Style x:Key="normalTB" TargetType="TextBlock">
			<Setter Property="Background" Value="#000000ff"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
			<Setter Property="FontFamily" Value="Consolas"/>
			<Setter Property="FontSize" Value="16"/>
		</Style>

		<Style x:Key="normalTBox" TargetType="TextBox">
			<Setter Property="Background" Value="#000000ff"/>
			<Setter Property="Foreground" Value="#000000"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
			<Setter Property="FontFamily" Value="Consolas"/>
			<Setter Property="FontSize" Value="16"/>
		</Style>
		
		<Style x:Key="menuBtn1" TargetType="Button">
			<Setter Property="Background" Value="#000000ff"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="Grid.Column" Value="0"/>
			<Setter Property="Grid.RowSpan" Value="3"/>
			<Setter Property="BorderBrush" Value="#000000ff"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border BorderThickness="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}">
							<TextBlock Text="{TemplateBinding Content}"
									   FontFamily="Consolas"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="menuBtn2" TargetType="Button">
			<Setter Property="Background" Value="#000000ff"/>
			<Setter Property="Height" Value="80"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="BorderBrush" Value="#000000ff"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border BorderThickness="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}">
							<TextBlock Text="{TemplateBinding Content}"
									   FontFamily="Consolas"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background" Value="#5188ed"/>
					<Setter Property="Foreground" Value="#000000"/>
					<Setter Property="BorderBrush" Value="#5188ed"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Application.Resources>
</Application>
